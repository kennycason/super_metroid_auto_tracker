{
  "name": "super-metroid-tracker-unified",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "tsx src/server/main.ts",
    "server:dev": "tsx watch src/server/main.ts",
    "start": "npm run build && npm run server",
    "start:unified": "npm run build && npm run server 3000",
    "dev:full": "concurrently \"npm run dev\" \"npm run server:dev\"",
    "dev:full:mesen": "concurrently \"npm run dev\" \"npm run server:dev -- --backend=mesen\"",
    "dev:full:retroarch": "concurrently \"npm run dev\" \"npm run server:dev -- --backend=retroarch\"",
    "electron": "NODE_ENV=production electron electron/main.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development ELECTRON_DEBUG=1 electron electron/main.js\"",
    "electron:build": "npm run build && npm run server:build && electron-builder",
    "electron:dist": "npm run electron:build --publish=never",
    "electron:pack": "electron-builder --dir",
    "server:build": "tsc -p tsconfig.server.json",
    "test": "vitest",
    "test:server": "vitest run --config vitest.config.server.ts"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "tsx": "^4.7.0",
    "concurrently": "^8.2.2",
    "vitest": "^1.2.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.4"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.kenny.super-metroid-tracker",
    "productName": "Super Metroid Auto Tracker",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "src/server/**/*.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/server",
        "to": "server"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/metroid_1024x1024.jpeg"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/metroid_1024x1024.jpeg"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "public/metroid_1024x1024.jpeg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
